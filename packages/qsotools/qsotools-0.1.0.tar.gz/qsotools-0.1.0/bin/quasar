import quasar,argparse
parser = argparse.ArgumentParser(prog='quasar',description='Toolset for quasar absorption line analysis.')
parser.add_argument('operation', help='Operation to be run',choices=['veldisp'])
parser.add_argument('-z',metavar='',nargs='*',type=float,help='Redshift')
parser.add_argument('-w',metavar='',nargs='*',type=float,help='Redshift')
args = parser.parse_args()
args.c = 299792.458
if args.operation=='veldisp':
    quasar.veldisp(args)
