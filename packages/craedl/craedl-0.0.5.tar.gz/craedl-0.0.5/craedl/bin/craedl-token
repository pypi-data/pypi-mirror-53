import os
import sys

token_path = '~/.config/craedl'
argv = sys.argv

if len(argv) != 2:
    sys.exit('usage: craedl-token <API-access-token>')
else:
    f = open(os.path.expanduser(token_path), 'w+')
    f.write(argv[1])
    f.close()
