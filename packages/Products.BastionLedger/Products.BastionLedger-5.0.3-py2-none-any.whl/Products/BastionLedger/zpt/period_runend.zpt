<html tal:replace="structure context/manage_page_header"/>
     
   <span tal:replace="structure context/manage_tabs"/>
 
   <br/>

      <form name="eod_form" action="" tal:attributes="action request/URL1">
         <span class="form-label">End of Day</span>
         <input type="text" name="effective:date" size="10" value="" 
                tal:attributes="value python: context.accrued_to + 1"/>
         <input type="submit" name="manage_dailyEnd:method" value=" Run "/>
      </form>


      <form name="run_form" action="" tal:attributes="action request/URL1">
         <span class="form-label">Period Ended</span>
         <input type="text" name="effective:date" size="10" value="" 
                tal:attributes="value context/nextPeriodEnd"/>
         <input type="submit" name="manage_periodEnd:method" value=" Run "/>
      </form>

      <form name="rerun_form" action="" method="post" tal:attributes="action request/URL1">
         <table summary="">
            <tr>
                <td class="field"><span class="form-label">Period Ended</span></td>
                 <td class="field">
                    <select name="effective:date">
                       <option tal:repeat="date context/periodIds" tal:content="date"/>
                    </select>
                 </td>
                 <td class="form-item">
		    <tal:rerunable tal:condition="context/rerunable">
                       <input type="hidden" name="force:boolean" value="1"/>
                       <input type="submit" class="context" name="manage_periodEnd:method" value=" Rerun "/>
		    </tal:rerunable>
                    <input type="submit" class="context" name="manage_periodEndReports:method" value=" Rerun Reports Only"/>
                    <input type="submit" class="context" name="manage_periodUndo:method" value=" Undo "/>
                 </td>
            </tr>
         </table>

         <p class="formHelp">If all your period-ends are completely borked, you can start again...</p>
         <div class="form-item">
            <input type="submit" name="manage_reset:method" value=" Reset "/>
         </div>

      </form>

<html tal:replace="structure context/manage_page_footer"/>
