<configure
  xmlns="http://namespaces.zope.org/zope"
  xmlns:browser="http://namespaces.zope.org/browser"
  xmlns:plone="http://namespaces.plone.org/plone"
  xmlns:zcml="http://namespaces.zope.org/zcml"
  i18n_domain="contenttypes.basic">

  <include package="plone.behavior" file="meta.zcml"/>

  <plone:behavior
    name="contenttyes.basic.hide_text"
    title="Hide Text Behavior"
    description="Adds hide text field"
    provides=".hide_text.IHideTextSchema"
    factory=".hide_text.HideTextFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.IHideTextBehavior"
    />

  <plone:behavior
    name="contenttyes.basic.button_text"
    title="Button Text Behavior"
    description="Adds button text field"
    provides=".button_text.IButtonTextSchema"
    factory=".button_text.ButtonTextFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.IButtonTextBehavior"
    />

  <plone:behavior
    name="contenttyes.basic.text_position"
    title="Text Position Behavior"
    description="Adds text position field"
    provides=".text_position.ITextPositionSchema"
    factory=".text_position.TextPositionFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.ITextPositionBehavior"
    />

  <plone:behavior
    name="contenttyes.basic.icon"
    title="Icon Behavior"
    description="Adds icon field"
    provides=".icon.IIconBehaviorSchema"
    factory=".icon.IconBehaviorFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.IIconBehavior"
    />

  <plone:behavior
    name="contenttyes.basic.colour"
    title="Colour Behavior"
    description="Adds colour field"
    provides=".colour.IColourBehaviorSchema"
    factory=".colour.ColourBehaviorFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.IColourBehavior"
    />

  <plone:behavior
    name="contenttyes.basic.link"
    title="Link Behavior"
    description="Adds link field"
    provides=".link.ILinkBehaviorSchema"
    factory=".link.LinkBehaviorFactory"
    for="plone.dexterity.interfaces.IDexterityContent"
    marker="contenttypes.basic.interfaces.ILinkBehavior"
    />

</configure>