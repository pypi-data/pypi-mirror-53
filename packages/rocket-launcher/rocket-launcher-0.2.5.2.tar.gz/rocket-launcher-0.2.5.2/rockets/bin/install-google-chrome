#!/bin/sh
if [ ! -f "/usr/bin/chrome" ]; then
	pacman -Sy --noconfirm alsa-lib gtk3 libcups libxss libxtst nss > /dev/null 2>&1
	su who -c "cd /tmp && yaourt --getpkgbuild aur/google-chrome && cd google-chrome && makepkg" > /dev/null 2>&1
	cd /tmp/google-chrome 
	pacman -U *.tar.xz --noconfirm > /dev/null 2>&1
	cd .. 
	rm -rf google-chrome
fi
